@{
    string message = ViewBag.message;
}

<!DOCTYPE html>
<html lang="en">
    <head>
        <title>@ViewBag.Title</title>
        <link rel="stylesheet" href="~/css/site.css">

    </head>
    <body>
        <div id="header">
            <h2 id="headerTitle"> Bank Data Web Service Web Application </h2>
        </div>
        <div id="naviBar">
            @if(message != null && message.Equals("LoggedIn"))
            {
                <ul>
                    <li>
                        <a href="/Home/Index?sessionId=12345">Login</a>
                    </li>
                    <li>
                        <a href="/Home/Profile?sessionId=12345">Profile</a>
                    </li>
                    <li>
                        <a href="/Home/Transactions?sessionId=12345">Transactions</a>
                    </li>
                    <li>
                        <a href="/Home/Index">Logout</a>
                    </li>
                </ul>
            }
            else
            {
                <ul>
                    <li>
                        <a href="/Home/Index">Login</a>
                    </li>
                    <li>
                        <a href="/Home/Profile">Profile</a>
                    </li>
                    <li>
                        <a href="/Home/Transactions">Transactions</a>
                    </li>
                </ul>
            }
        </div>
        <div id="mainBody">
            @RenderBody()
        </div>
        <div id="footer">
            <p> Website created by team: </p>
        </div>
    </body>
</html>
